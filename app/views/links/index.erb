<h1> Bookmarks </h1>

<h2> Welcome </h2>

<div class="button">
  <form action="links/new" method="get" >
      <input type="submit" value="Add bookmark"><br><br>
    </div>
  </form>
</div>

<div class="button">
  <form action="/tags/:name" method="get" >
    <input type="text" name="tags" >
      <input type="submit" value="Search"><br><br>
    </div>
  </form>
</div>

<ul id='links'>
  <% @links.each do |link| %>
    <li>
      Title: <%= link.title %> <br>
      URL:   <%= link.url   %> <br>
      Tag:   <%= link.tags.map(&:name).join(',') %><br><br>
    </li>
  <% end %>
</ul>
